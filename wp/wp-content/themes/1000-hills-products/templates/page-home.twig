{% extends "layouts/base.twig" %}

{% block content %}
<section id="content" role="main" class="content-wrapper">
  <div class="brown-section" style="background-image: url({{ post.get_field('brown_section_background_image') }})">
    <div class="brown-section--left">
      <div class="c-container c-container-text-narrow">
        <h1>{{ post.get_field('brown_section_left_title') }}</h1>
        <div class="content">{{ post.get_field('brown_section_left') }}</div>
        <p>
          <a href="{{ post.get_field('brown_section_link') }}">{{ post.get_field('brown_section_link_title') }}</a>
        </p>
      </div>
    </div>
  </div>
</section>
{% endblock %}
