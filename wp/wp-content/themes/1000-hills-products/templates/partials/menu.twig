{% if menu %}
  <ul class="header-menu">
    {% for item in menu %}
      <li class="header-menu-item {{item.classes | join(' ')}}">
        <a href="{{item.get_link}}" class="header-menu-item-link"><span>{{item.title}}</span></a>
        {% if item.get_children %}
          <ul class="header-menu--submenu">
            {% for child in item.get_children %}
              <li class="header-menu-item header-menu--submenu-item {{child.classes | join(' ')}}">
                <a href="{{child.get_link}}" class="header-menu-item-link header-menu--submenu-item-link">
                  <span>{{child.title}}</span>
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endif %}
